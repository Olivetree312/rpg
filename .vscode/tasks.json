{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ with g++",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",       
                "main.cpp",
                "Character.cpp",
                "-o",
                "main"
            ],
            "group": "build"
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "./main",
            "problemMatcher": [],
            "group": "test",
            "dependsOn": "Build C++ with g++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++11",        // Explicitly set C++11 for clang++
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "main.cpp",
                "Character.cpp", 
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
